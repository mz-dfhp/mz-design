{
  "private": true,
  "name": "design",
  "version": "1.0.0",
  "description": "react-ui",
  "type": "module",
  "scripts": {
    "dev": "pnpm -C play dev",
    "lint": "npm run lint:eslint & npm run lint:prettier",
    "lint:eslint": "eslint --fix --cache --cache-location node_modules/.cache/eslint/",
    "lint:prettier": "prettier --write --cache --parser typescript \"**/*.[tj]s?(x)\"",
    "lint:lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx --no-install commitlint -e"
  },
  "dependencies": {
    "@ant-design/components": "workspace:^1.0.0",
    "@ant-design/utils": "workspace:^1.0.0",
    "@emotion/react": "^11.11.0",
    "classnames": "^2.3.2",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.6.4"
  },
  "keywords": [
    "react",
    "react-ui",
    "react-design"
  ],
  "author": "mz-dfhp",
  "license": "ISC"
}
